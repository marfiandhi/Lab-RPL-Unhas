<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorBlack"
        tools:context=".PBOFragment">

    <TextView
            android:textColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textAlignment="center"
            android:textSize="28sp"
            android:text="@string/choose_respon"/>

    <TableLayout
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

            <Button
                    android:id="@+id/pbo_1"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_color_another"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:text="@string/chapter_i"
                    android:textAllCaps="false"
                    android:textColor="@color/colorLightGrey"
                    android:drawableTop="@drawable/ic_filter_1_black_24dp"
                    android:drawableTint="@color/colorWhite"/>

            <Button
                    android:id="@+id/pbo_2"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_color_another"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:text="@string/chapter_ii"
                    android:textAllCaps="false"
                    android:textColor="@color/colorLightGrey"
                    android:drawableTop="@drawable/ic_filter_2_black_24dp"
                    android:drawableTint="@color/colorWhite"/>

            <Button
                    android:id="@+id/pbo_3"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_color_another"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:text="@string/chapter_iii"
                    android:textAllCaps="false"
                    android:textColor="@color/colorLightGrey"
                    android:drawableTop="@drawable/ic_filter_3_black_24dp"
                    android:drawableTint="@color/colorWhite"/>

        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <Button
                    android:id="@+id/pbo_4"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_color_another"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:text="@string/chapter_iv"
                    android:textAllCaps="false"
                    android:textColor="@color/colorLightGrey"
                    android:drawableTop="@drawable/ic_filter_4_black_24dp"
                    android:drawableTint="@color/colorWhite"/>

            <Button
                    android:id="@+id/pbo_5"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_color_another"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:text="@string/chapter_v"
                    android:textAllCaps="false"
                    android:textColor="@color/colorLightGrey"
                    android:drawableTop="@drawable/ic_filter_5_black_24dp"
                    android:drawableTint="@color/colorWhite"/>

            <Button
                    android:id="@+id/pbo_6"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_color_another"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:text="@string/chapter_vi"
                    android:textAllCaps="false"
                    android:textColor="@color/colorLightGrey"
                    android:drawableTop="@drawable/ic_filter_6_black_24dp"
                    android:drawableTint="@color/colorWhite"/>

        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <Button
                    android:id="@+id/pbo_7"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_color_another"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:text="@string/chapter_vii"
                    android:textAllCaps="false"
                    android:textColor="@color/colorLightGrey"
                    android:drawableTop="@drawable/ic_filter_7_black_24dp"
                    android:drawableTint="@color/colorWhite"/>

            <Button
                    android:id="@+id/pbo_8"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_color_another"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:text="@string/chapter_viii"
                    android:textAllCaps="false"
                    android:textColor="@color/colorLightGrey"
                    android:drawableTop="@drawable/ic_filter_8_black_24dp"
                    android:drawableTint="@color/colorWhite"/>

        </TableRow>

        <Button
                android:id="@+id/pbo_register"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary_dark"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="16dp"
                android:padding="4dp"
                android:text="@string/register"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:drawableTop="@drawable/ic_assignment_black_24dp"
                android:drawableTint="@color/colorWhite"/>
    </TableLayout>

</LinearLayout>