<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"
        tools:context=".view.profile.DisplayProfileActivity">

    <RelativeLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/display_profile_pic"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:elevation="8dp"
                android:layout_centerHorizontal="true"
                android:src="#000"
                app:civ_circle_background_color="#000"/>

        <LinearLayout
                android:orientation="vertical"
                android:elevation="4dp"
                android:layout_marginTop="16dp"
                android:fadingEdge="vertical"
                android:layout_below="@id/display_profile_pic"
                android:background="@color/colorBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_account_circle_black_24dp"
                        android:tint="@color/colorGrey"
                        android:contentDescription="@string/name_icon"/>

                <TextView
                        android:id="@+id/display_txt_full_name"
                        android:layout_marginStart="8dp"
                        android:textIsSelectable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp"
                        android:text="@string/your_name_belong_here"/>

            </LinearLayout>

            <LinearLayout
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_person_black_24dp"
                        android:tint="@color/colorGrey"
                        android:contentDescription="@string/name_icon"/>

                <TextView
                        android:id="@+id/display_txt_nickname"
                        android:layout_marginStart="8dp"
                        android:textIsSelectable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp"
                        android:text="@string/dummy_nickname"/>

            </LinearLayout>

            <LinearLayout
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_credit_card_black_24dp"
                        android:tint="@color/colorGrey"
                        android:contentDescription="@string/name_icon"/>

                <TextView
                        android:id="@+id/display_txt_nim"
                        android:layout_marginStart="8dp"
                        android:textIsSelectable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp"
                        android:text="@string/dummy_nim"/>

            </LinearLayout>

            <LinearLayout
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_gender"
                        android:tint="@color/colorGrey"
                        android:contentDescription="@string/name_icon"/>

                <TextView
                        android:id="@+id/display_txt_gender"
                        android:layout_marginStart="8dp"
                        android:textIsSelectable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp"
                        android:text="@string/dummy_gender"/>

            </LinearLayout>

            <LinearLayout
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_email_black_24dp"
                        android:tint="@color/colorGrey"
                        android:contentDescription="@string/name_icon"/>

                <TextView
                        android:id="@+id/display_txt_email"
                        android:layout_marginStart="8dp"
                        android:textIsSelectable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp"
                        android:text="@string/prompt_email"/>

            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorBlack"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:gravity="bottom"
                    android:layout_marginBottom="8dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:text="@string/credits"
                    android:textColor="@color/colorGrey"
                    android:fontFamily="cursive"/>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
