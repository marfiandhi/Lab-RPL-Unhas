<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMaroon</item>
        <item name="colorPrimaryDark">@color/colorMaroonDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorMaroon</item>
        <item name="colorPrimaryDark">@color/colorMaroonDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.CustomButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/rounded_color</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorMaroon</item>
        <item name="colorControlHighlight">@color/colorMaroonDark</item>
    </style>

    <style name="AppTheme.CustomButtonBorderless" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/colorBlueLink</item>
        <item name="android:colorControlHighlight">@color/colorLightGrey</item>
    </style>

    <style name="CollapsingToolbarLayoutExpandedStyle" parent="AppTheme">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0sp</item>
    </style>

</resources>
